@using Vetero.Shared.ViewModels.Rapid.ForecastItems;

<h1 class="text-center exotic">Prognoza pogody</h1>
<div class="row mb-12">
    <RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Client">
        <Tabs>
            <RadzenTabsItem Text="Aktualna">
                <CurrentAvg forecast="forecast" avgCurrent="avgCurrent"/>
            </RadzenTabsItem>
            <RadzenTabsItem Text="Godzinowa">
                <WeatherForecastGrid forecast="@forecastDay.ToList()" />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Prognoza">
                <Forecast forecastDays="forecastDay" />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Wykres">
                <WeatherForecastChart forecast="@forecast" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>     
</div>
@code {
    [Parameter] public ForecastWeather forecast { get; set; }
    [Parameter] public IEnumerable<Forecastday> forecastDay { get; set; }
    [Parameter] public Forecastday avgCurrent { get; set; }
}
